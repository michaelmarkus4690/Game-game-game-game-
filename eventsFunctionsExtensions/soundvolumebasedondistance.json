      "description": "Change a channel volume based on distance between 2 objects.",
      "fullName": "Sound volume based on distance",
      "functionType": "Action",
      "name": "SoundObjects",
      "sentence": "Change channel _PARAM3_ volume based on the distance between _PARAM1_ and _PARAM2_ at _PARAM4_ sound range and _PARAM5_ max volume range",
      "events": [
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [],
          "actions": [
            {
              "type": {
                "value": "ModVolumeSoundCanal"
              },
              "parameters": [
                "",
                "GetArgumentAsNumber(\"Channel\")",
                "=",
                "Source.Variable(__SoundVolumeBasedOnDistance.Audio)"
              ]
            },
            {
              "type": {
                "value": "ModVarObjet"
              },
              "parameters": [
                "Source",
                "__SoundVolumeBasedOnDistance.Audio",
                "=",
                "GetArgumentAsNumber(\"Full\")-DistanceBetweenPositions(Player.BoundingBoxCenterX(), Player.BoundingBoxCenterY(), Source.BoundingBoxCenterX(), Source.BoundingBoxCenterY())/GetArgumentAsNumber(\"Range\")"
              ]
            }
          ]
        },
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "VarObjet"
              },
              "parameters": [
                "Source",
                "__SoundVolumeBasedOnDistance.Audio",
                "<",
                "0"
              ]
            }
          ],
          "actions": [
            {
              "type": {
                "value": "ModVarObjet"
              },
              "parameters": [
                "Source",
                "__SoundVolumeBasedOnDistance.Audio",
                "=",
                "0"
              ]
            }
          ]
        },
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "VarObjet"
              },
              "parameters": [
                "Source",
                "__SoundVolumeBasedOnDistance.Audio",
                ">",
                "100"
              ]
            }
          ],
          "actions": [
            {
              "type": {
                "value": "ModVarObjet"
              },
              "parameters": [
                "Source",
                "__SoundVolumeBasedOnDistance.Audio",
                "=",
                "100"
              ]
            }
          ]
        }
      ],
